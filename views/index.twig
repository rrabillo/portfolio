{# index.twig #}
{% extends "layout.twig" %}

{% block page %}
    <div class="pjax-wrapper" data-page="home">
        <header>
            <div class="header-top">{ Richard<span class="color-dark">R</span> }</div>
            <div class="header-bottom"><span class="js-text-update">Wordpress</span><span class="color-dark js-text-update-blink">_</span></div>
        </header>
        {% include 'parts/site-intro.twig' %}
        <div class="container">
            <div class="row">
                <div class="col-xl-8 offset-xl-2 col-lg-10 offset-lg-1">
                    <section class="section-content js-site-intro-first">
                        <p>
                            Je m’appelle <span class="color-dark font-weight-semi-bold js-bubble-trigger js-text-scroll"><span>Richard</span></span> et
                            je suis développeur web
                            <span class="color-dark font-weight-semi-bold js-bubble-trigger js-text-scroll"><span>freelance</span></span>
                        </p>
                    </section>
                    <section class="section-content">
                        <p>
                            Plutôt orienté <span class="color-dark font-weight-semi-bold js-bubble-trigger js-text-scroll"><span>front-end</span></span>
                            je travaille avec plusieurs
                            <span class="color-dark font-weight-semi-bold js-bubble-trigger js-text-scroll"><span>technos</span></span> !
                        </p>
                    </section>
                    <section class="section-content">
                        <p>
                            Jetez un oeil à certains de mes
                            <span class="color-dark font-weight-semi-bold js-scrollto js-text-scroll" data-target="projects">
                                    <span class="has-underline underline-dark">projets</span>
                                </span> ou
                            <span class="color-dark font-weight-semi-bold js-scrollto js-text-scroll" data-target="contact">
                                    <span class="has-underline underline-dark ">contactez moi</span>
                                </span>
                        </p>
                    </section>
                    <section class="section-content projects-list js-projects-list" id="projects">
                        <ul>
                            <li class="has-underline">
                                <a href="/laposte" class="pjax-link">
                                    <span class="projects-list__line bg-turquoise js-projects-list-line"></span>
